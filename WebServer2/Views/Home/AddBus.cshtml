@model WebServer2.Models.ViewModels.AddBusModel


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>AddBusModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.BusNumber, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BusNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BusNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TypesList, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Type, Model.TypesList)
            </div>
        </div>
        @for (int i = 0; i < 3; i++)
        {
            <hr/>
            <div class="form-group">
                <p class="control-label col-md-2">Beacon @(i+1) UUID:</p>
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Beacons[i].BeaconUUID, new {htmlAttributes = new {@class = "form-control"}})
                </div>
            </div>
            <div class="form-group">
                <p class="control-label col-md-2">Beacon @(i + 1) Major:</p>
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Beacons[i].BeaconMajor, new {htmlAttributes = new {@class = "form-control"}})
                </div>
            </div>
            <div class="form-group">
                <p class="control-label col-md-2">Beacon @(i + 1) Minor:</p>
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Beacons[i].BeaconMinor, new {htmlAttributes = new {@class = "form-control"}})
                </div>
            </div>
            <div class="form-group">
                <p class="control-label col-md-2">Beacon @(i + 1) X position:</p>
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Beacons[i].XPosition, new {htmlAttributes = new {@class = "form-control"}})
                </div>
            </div>
    <div class="form-group">
        <p class="control-label col-md-2">Beacon @(i + 1) y position:</p>
        <div class="col-md-10">
            @Html.EditorFor(m => m.Beacons[i].YPosition, new {htmlAttributes = new {@class = "form-control"}})
        </div>
    </div>
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
